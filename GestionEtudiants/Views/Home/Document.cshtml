
@{ ViewData["Title"] = ""; ViewData["Doc"] = "active";}

@model List<Document>
<div class="container-fluid py-4 d-flex justify-content-center">
    <div class="col-12 col-xl-4 ">
        <div class="card h-100">
            <div class="card-header pb-0 p-3">
                <div class="row">
                    <div class="col-md-8 d-flex align-items-center">
                        <h6 class="mb-0">Demmande de Documents</h6>
                    </div>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="rs-select2 js-select-simple select--no-search">
                    <form method="post">

                        <select name="type" id="annee" class="form-control" required>
                            <option disabled selected>Attestation</option>
                            <option value="Attestation de scolarite">Attestation de scolarite</option>
                            <option value="Releve de note">Releve de note</option>
                            <option value="Attestation de stage">Attestation de stage</option>

                        </select>
                        <div class="select-dropdown"></div>
                        <button class="btn bg-gradient-dark w-100 my-4 mb-2">Demander</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <table id="tbl" class="table align-items-center dt-responsive mb-0 w-100">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Document</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Date de demande</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">L'etat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var mod in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <h6 class="mb-0 text-sm">@mod.type</h6>
                                                </td>
                                                <td>
                                                    @mod.date_demande
                                                </td>
                                                <td>
                                                    pas encore
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
<script>
    $(document).ready(function () {
        $('#tbl').dataTable({
        });
    });
</script>
}
