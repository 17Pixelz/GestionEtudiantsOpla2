@{ Layout = ""; }
@model Etudiant
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="yh20">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Inscription et Réinscription en ligne - eEnsas</title>

    <!-- Icons font CSS-->
    <link href="../colorlib-regform-5/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="../colorlib-regform-5/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="../colorlib-regform-5/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="../colorlib-regform-5/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="http://www.arabic-keyboard.org/keyboard/keyboard.css">
    <script type="text/javascript" src="http://www.arabic-keyboard.org/keyboard/keyboard.js" charset="UTF-8"></script>
    <!-- Main CSS-->
    <link href="../assets/styles/test.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
        <div class="wrapper wrapper--w780">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">Formulaire d'inscription en ligne </h2>
                    <br>
                    <div class="row">
                        <div class="col-lg-3 col-md-2"></div>
                        <div class="col-lg-6 col-md-8">
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar btn--blue progress-bar-striped active" role="progressbar"
                                     area-valuemin="1" area-valuemax="5" aria-valuenow="4" style="width: 80%;">
                                    <strong>Etape4</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-2"></div>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-row m-b-50">
                            <div class="name">Filière </div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-6">
                                        <div class="rs-select2 js-select-simple select--no-search">

                                            <select name="filiere" asp-for="filiere" id="filiere" class="form-control" required>
                                                <option value="">Filière</option>
                                                <optgroup label="Cycle Préparatoire (CP)">
                                                    <option value="STI">Sciences et Technologies pour l'Ingénieur </option>
                                                </optgroup>

                                                <optgroup label="Cycle d'ingénieur (CI)">
                                                    <option value="INFO">Génie Informatique</option>
                                                    <option value="GTR">Génie Telecom et Réseaux</option>
                                                    <option value="INDUS">Génie Industriel</option>
                                                    <option value="GPMC">Génie des Procédés et Matériaux Céramiques</option>
                                                </optgroup>
                                            </select>
                                            <div class="select-dropdown"></div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="rs-select2 js-select-simple select--no-search">

                                            <select name="annee" asp-for="annee" id="annee" class="form-control" required>
                                                <option disabled selected>Année</option>
                                                <optgroup label="Cycle préparatoire (CP)">
                                                    <option value="1CP">Première année</option>
                                                    <option value="2CP">Deuxième année</option>
                                                </optgroup>
                                                <optgroup label="Cycle d'ingénieur (CI)">
                                                    <option value="1CI">Troisième année</option>
                                                    <option value="2CI">Quatrième année</option>
                                                    <option value="3CI">Cinquième année</option>
                                                </optgroup>
                                            </select>
                                            <div class="select-dropdown"></div>

                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>

                        <div class="form-row m-b-50">
                            <div class="name">Bac </div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-6">
                                        <div class="rs-select2 js-select-simple select--no-search">

                                            <select name="type_bac" asp-for="type_bac" id="type_bac" required>
                                                <option selected disabled>Type de bac</option>
                                                <option value="SMA">Sciences maths 'A'</option>
                                                <option value="SMB">Sciences maths 'B'</option>
                                                <option value="SPC">Sciences physique chimie</option>
                                                <option value="SVT">Sciences de la vie et de terre</option>
                                                <option value="STE">Sciences et technologies électriques</option>
                                                <option value="STM">Sciences et technologies mécaniques</option>
                                            </select>
                                            <div class="select-dropdown"></div>

                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="rs-select2 js-select-simple select--no-search">

                                            <select name="annee_bac" asp-for="annee_bac" id="annee_bac" required>
                                                <option selected disabled>Année du bac</option>
                                                <div class="select-dropdown"></div>

                                                <option value="2010">2010</option>
                                                <option value="2011">2011</option>
                                                <option value="2012">2012</option>
                                                <option value="2013">2013</option>
                                                <option value="2014">2014</option>
                                                <option value="2015">2015</option>
                                                <option value="2016">2016</option>
                                                <option value="2017">2017</option>
                                                <option value="2018">2018</option>
                                                <option value="2019">2019</option>
                                                <option value="2020">2020</option>
                                                <option value="2021">2021</option>
                                                <option value="2022">2022</option>
                                            </select>
                                            <div class="select-dropdown"></div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="form-row m-b-50">
                            <div class="name"></div>
                            <div class="value">
                                <div class="row ">
                                    <div class="col-6">
                                        <div class="rs-select2 js-select-simple select--no-search">

                                            <select name="mention_bac" asp-for="mention_bac" id="mention_bac" required>
                                                <option disabled selected>Mention du bac</option>
                                                <option value="Très bien">Très bien</option>
                                                <option value="Bien">Bien</option>
                                                <option value="Assez bien">Assez bien</option>
                                            </select>
                                            <div class="select-dropdown"></div>

                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>



                        <div class="form-row m-b-50">
                            <div class="name"></div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-6">
                                        <div class="input-group">
                                            <input class="input--style-5" type="text" asp-for="lycee" id="lycee" name="lycee" placeholder="Votre Lycée" required>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group">
                                            <input class="input--style-5" type="text" id="delegation" asp-for="delegation" name="delegation" placeholder="Votre Délégation(النيابة)" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-row m-b-50">
                            <div class="name"></div>
                            <div class="value">
                                <div class="row ">
                                    <div class="col-6">


                                        <div class="input-group">
                                            <input class="input--style-5" type="text" id="academie" asp-for="academie" name="academie" class="form-control" placeholder="Votre académie" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>




                        <div class="alert alert-info" role="alert">
                            <h4>
                                Cursus avant ENSA - <span class="text-danger">
                                    à remplire UNIQUEMENT par les étudiants ayant un BAC+2 ou BAC+3 à
                                    l'exterieur de l'ENSA
                                </span>
                            </h4>
                        </div>

                        <div class="form-row m-b-50">
                            <div class="name">Diplôme précédent</div>
                            <div class="value">
                                <div class="row ">
                                    <div class="col-12">
                                        <div class="rs-select2 js-select-simple select--no-search">

                                            <select name="diplome" asp-for="diplome" id="diplome">
                                                <option selected disabled>Selectionnez votre diplome précédent</option>
                                                <option value="CNC">Concours National Commun (CNC)</option>
                                                <option value="DUT">Diplôme universitaire de technologie (DUT)</option>
                                                <option value="DEUG">Diplôme d'études universitaires générales (DEUG)</option>
                                                <option value="DEUST">Diplôme d'études universitaires scientifiques et techniques (DEUST)</option>
                                                <option value="Licence">Licence (BAC+3)</option>
                                                <option value="Master">Master (BAC+5)</option>
                                                <option value="CP">Cycle préparatoire intégré</option>
                                            </select>
                                            <div class="select-dropdown"></div>

                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>



                        <div class="form-row m-b-50">
                            <div class="name">Lieu</div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-6">
                                        <div class="input-group">
                                            <input class="input--style-5" type="text" id="ecole" asp-for="ecole" name="ecole" placeholder="Votre etablissement">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group">
                                            <input class="input--style-5" type="text" id="ville_diplome" asp-for="ville_diplome" name="ville_diplome" placeholder="La ville d'établissement">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row m-b-50">
                            <div class="name">  </div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-6">
                                        <a asp-controller="Reinscription" asp-action="step3" class="btn btn--radius-2 btn-secondary">Précédent</a>
                                    </div>

                                    <div class="col-6">
                                        <button type="submit" class="btn btn--radius-2 btn--blue">Suivant</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>


    </div>


    <!-- Jquery JS-->
    <script src="../colorlib-regform-5/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="../colorlib-regform-5/vendor/select2/select2.min.js"></script>
    <script src="../colorlib-regform-5/vendor/datepicker/moment.min.js"></script>
    <script src="../colorlib-regform-5/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="../colorlib-regform-5/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<!-- end document-->